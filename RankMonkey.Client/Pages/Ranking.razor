@page "/rank"
@page "/"
@attribute [Authorize]

@using RankMonkey.Client.Services
@using RankMonkey.Client.Pages
@using Microsoft.AspNetCore.Authorization

@inject ILogger<Ranking> Logger
@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <div class="container mt-4">
            @if (!string.IsNullOrEmpty(userName))
            {
                <h1 class="mb-4 text-center">Hello, @userName!</h1>
            }

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h5 class="card-title text-center mb-4">Let's see how rich you are!</h5>
                    <div class="card">
                        <div class="card-body">
                            <EditForm Model="@model" OnValidSubmit="SubmitMetrics" Context="formContext">
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <div class="mb-3">
                                    <label for="currency" class="form-label">Currency</label>
                                    <InputSelect id="currency" @bind-Value="model.Currency" class="form-select">
                                        <option value="INR">INR</option>
                                        <option value="USD">USD</option>
                                    </InputSelect>
                                </div>

                                <div class="mb-3">
                                    <label for="income" class="form-label">Annual Income (@GetCurrencySymbol())</label>
                                    <InputNumber id="income" @bind-Value="model.Income" class="form-control" />
                                    <ValidationMessage For="@(() => model.Income)" class="text-danger" />
                                </div>

                                <div class="mb-3">
                                    <label for="netWorth" class="form-label">Net Worth (@GetCurrencySymbol())</label>
                                    <InputNumber id="netWorth" @bind-Value="model.NetWorth" class="form-control" />
                                    <ValidationMessage For="@(() => model.NetWorth)" class="text-danger" />
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Submit</button>
                            </EditForm>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-3">Your Ranking</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span style="width: 400px;">Your income is more than</span>
                                    <span class="text-primary fw-bold" style="width: 100px; text-align: right;">
                                        @FormatPercentile(ranking?.IncomePercentile ?? -1)
                                    </span>
                                    <span style="width: 200px; text-align: right;">of users</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span style="width: 400px;">Your net worth is more than</span>
                                    <span class="text-primary fw-bold" style="width: 100px; text-align: right;">
                                        @FormatPercentile(ranking?.NetWorthPercentile ?? -1)
                                    </span>
                                    <span style="width: 200px; text-align: right;">of users</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>